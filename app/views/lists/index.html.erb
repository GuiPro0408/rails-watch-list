<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1 class = "text-center">Lists</h1>    
  </div>
</div>

.<div class="container-fluid d-flex gap-5 flex-wrap justify-content-center">
  <% @lists.each do |list| %>
    <div class="card shadow-sm rounded" style="width: 20rem;">
      <div class="card-body d-flex justify-content-between align-items-center">
          <h5 class="card-title"><%= list[:name] %></h5>
          <%= link_to("Show", list_path(list), class: 'btn btn-primary') %>
      </div>
    </div>
  <% end %>
</div>
